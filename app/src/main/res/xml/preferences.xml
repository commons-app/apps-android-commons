<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/preference_category_appearance">

        <SwitchPreference
            android:defaultValue="false"
            android:key="theme"
            android:summary="@string/preference_theme_summary"
            android:title="@string/preference_theme" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_category_general">

        <ListPreference
            android:defaultValue="@string/license_pref_cc_by_sa_4_0"
            android:entries="@array/pref_defaultLicense_entries"
            android:entryValues="@array/pref_defaultLicense_values"
            android:key="defaultLicense"
            android:title="@string/preference_license" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="useExternalStorage"
            android:summary="@string/use_external_storage_summary"
            android:title="@string/use_external_storage" />

        <EditTextPreference
            android:defaultValue="100"
            android:inputType="numberDecimal"
            android:key="uploads"
            android:maxLength="3"
            android:title="@string/set_limit" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Privacy">

        <ListPreference
            android:entries="@array/pref_locationAccuracy_entries"
            android:entryValues="@array/pref_locationAccuracy_values"
            android:key="locationAccuracy"
            android:title="@string/location_accuracy"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="allowGps"
            android:summary="@string/allow_gps_summary"
            android:title="@string/allow_gps" />

        <MultiSelectListPreference
            android:entries="@array/pref_exifTag_entries"
            android:entryValues="@array/pref_exifTag_values"
            android:key="redactExifTags"
            android:title="@string/redact_exif_tags"
            android:summary="@string/redact_exif_tags_summary"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_category_feedback">

        <Preference
            android:key="becomeBetaTester"
            android:summary="@string/become_a_tester_description"
            android:title="@string/become_a_tester_title" />

        <Preference
            android:key="sendLogFile"
            android:summary="@string/send_log_file_description"
            android:title="@string/send_log_file" />

    </PreferenceCategory>
</PreferenceScreen>