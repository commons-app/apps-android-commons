<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/nearby_filter_list_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentRight="true"
  android:background="@color/white"
  android:elevation="@dimen/activity_margin_horizontal"
  android:orientation="vertical">

  <fr.free.nrw.commons.nearby.CheckBoxTriStates
    android:id="@+id/checkbox_tri_states"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10"
    android:text="All" />

  <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/tiny_height"
    android:background="@android:color/darker_gray" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/search_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_10" />

</LinearLayout>
